<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login"
    android:background="@drawable/walls"
    tools:context="com.example.manish.apptopintro22.LoginActivity">

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivemail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@+id/etpassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_account_box_black_24dp" />


    <EditText
        android:id="@+id/etmail"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvLogin"
        android:layout_marginTop="62dp"
        android:backgroundTint="#ffeead"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <ImageView
        android:id="@+id/ivpw"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/etpassword"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_lock_outline_black_24dp" />


    <EditText
        android:id="@+id/etpassword"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etmail"
        android:layout_marginTop="35dp"
        android:backgroundTint="#ffeead"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/tvsignup"
        android:layout_alignLeft="@+id/tvLogin"
        android:layout_alignStart="@+id/tvLogin"
        android:layout_marginBottom="65dp"
        android:background="@drawable/shape"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvsignup"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="No account yet? Create one"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:onClick="Signup"
        android:clickable="true"
        tools:ignore="OnClick" />

</RelativeLayout>
